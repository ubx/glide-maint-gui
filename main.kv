<MainScreen>:
    title: 'glide man window'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Start XCSoar'
            on_press: app.doit()

        Button:
            text: 'CAN Monitor'
            on_press: root.manager.current = 'canmonitor'

<CanMonitorScreen>:
    BoxLayout:
        orientation: 'vertical'

        ScrollView:
            size_hint_y: 0.9
            do_scroll_y: True
            Label:
                height: self.texture_size[1]
                text:
                    'really some amazing text\n' * 100

        Button:
            size_hint_y: 0.1
            text: 'Back to menu'
            on_press: root.manager.current = 'menu'
